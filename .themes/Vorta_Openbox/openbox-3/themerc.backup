# Vorta Openbox theme by bl1nk (bl1nks.deviantart.com)
# Theme based on Dyne by lyrae (thrynk.deviantart.com)

# Window geometry
padding.width: 0
padding.height: 1
border.width: 2
osd.border.width: 1
window.client.padding.width: 1
window.client.padding.height: 1
window.handle.width: 0
window.frameColor: #313131
window.*.client.color: #313131

#Menu geometry
menu.border.width: 1
menu.overlap: 1

# Border colors
window.*.border.color: #222222
menu.border.color: #313131
osd.border.color: #313131

# Text shadows
window.active.label.text.font: shadow=n
window.inactive.label.text.font: shadow=n
menu.items.font: shadow=y
menu.title.text.font: shadow=y

# Active window
window.active.title.bg: flat solid
window.active.title.bg.color: #222222

window.active.label.bg: parentrelative
window.active.label.text.color: #222222

window.active.handle.bg: flat solid
window.active.handle.bg.color: #232323

window.active.grip.bg: flat solid
window.active.grip.bg.color: #222222

window.active.button.unpressed.bg: parentrelative
window.active.button.unpressed.image.color: #848484

window.active.button.pressed.bg: parentrelative
window.active.button.pressed.image.color: #ffffff

window.active.button.disabled.bg: parentrelative
window.active.button.disabled.image.color: #222222

window.active.button.hover.bg: parentrelative
window.active.button.hover.image.color: #c0c0c0

window.active.button.toggled.unpressed.bg: parentrelative
window.active.button.toggled.unpressed.image.color: #222222

window.active.button.toggled.pressed.bg: parentrelative
window.active.button.toggled.pressed.image.color: #ffffff

window.active.button.toggled.hover.bg: parentrelative
window.active.button.toggled.hover.image.color: #c0c0c0

# Inactive windows
window.inactive.title.bg: flat solid
window.inactive.title.bg.color: #222222

window.inactive.label.bg: parentrelative
window.inactive.label.text.color: #222222

window.inactive.handle.bg: flat solid
window.inactive.handle.bg.color: #222222

window.inactive.grip.bg: flat solid
window.inactive.grip.bg.color: #222222

window.inactive.button.unpressed.bg: parentrelative
window.inactive.button.unpressed.image.color: #848484

window.inactive.button.pressed.bg: parentrelative
window.inactive.button.pressed.image.color: #eeeeee

window.inactive.button.disabled.bg: parentrelative
window.inactive.button.disabled.image.color: #222222

window.inactive.button.hover.bg: parentrelative
window.inactive.button.hover.image.color: #c0c0c0

window.inactive.button.toggled.unpressed.bg: parentrelative
window.inactive.button.toggled.unpressed.image.color: #222222

window.inactive.button.toggled.pressed.bg: parentrelative
window.inactive.button.toggled.pressed.image.color: #ffffff

window.inactive.button.toggled.hover.bg: parentrelative
window.inactive.button.toggled.hover.image.color: #c0c0c0

# Menus
menu.title.bg: flat solid
menu.title.bg.color: #222222
menu.title.text.color: #c0c0c0
menu.title.text.justify: Left

menu.items.bg: flat solid
menu.items.bg.color: #222222
menu.items.text.color: #707070
menu.items.disabled.text.color: #c3c3c3

menu.items.active.bg: flat solid
menu.items.active.bg.color: #222222
menu.items.active.text.color: #c0c0c0
menu.items.active.disabled.text.color: #c3c3c3

#osd
osd.bg: flat solid
osd.bg.color: #222222

osd.label.bg: parentrelative
osd.label.text.color: #c0c0c0

osd.hilight.bg: flat solid bevel1
osd.hilight.bg.color: #909090

osd.unhilight.bg: flat solid
osd.unhilight.bg.color: #000000
